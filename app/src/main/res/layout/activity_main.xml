<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment android:name="com.squelchzines.squelchzinesar.AugmentedVideoFragment"
        android:id="@+id/ux_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/image_view_fit_to_scan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@mipmap/fit_to_scan"
        android:contentDescription="@string/fit_image_to_scan"/>

    <TextView
        android:id="@+id/text_view_fit_to_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:padding="8dp"
        android:layout_marginBottom="24dp"
        android:text="@string/fit_image_to_scan"
        android:textSize="24sp"
        android:textAlignment="center"/>

    <ImageButton
        android:id="@+id/image_button_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_help_outline_white_24dp"
        android:background="@null"
        android:layout_gravity="end"
        android:layout_margin="8dp"
        android:contentDescription="@string/help"/>

</FrameLayout>